<div id="medico">

<h1>Consultar MÃ©dico</h1>

<div id='consulta'>
   <%= form_tag consultar_medicos_path, method: :get do %>
     <%= label_tag :nome, 'Busca por nome' %>
     <%= text_field_tag :nome %>
     <%= submit_tag 'Buscar' %>
   <% end %>
</div>

<table id="relatorio">
  <tr>
    <th>Nome</th>
    <th>Crm</th>
    <th>Especialidade</th>
    <th>Telefone</th>
    <th>Cidade</th>
    <th>Posto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @medicos.each do |medico| %>
  <tr>
    <td><%= medico.nome %></td>
    <td><%= medico.crm %></td>
    <td><%= medico.especialidade.nome %></td>
    <td><%= medico.telefone %></td>
    <td><%= medico.cidade %></td>
    <td><%= medico.posto.nome %></td>
    <td><%= link_to 'Ver', medico %></td>
    <td><%= link_to 'Alterar', edit_medico_path(medico) %></td>
    <td><%= link_to 'Apagar', medico, confirm: 'Realmente deseja apagar?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

</div>
